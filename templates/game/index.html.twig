{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex p-2 justify-content-between">
            <div class="col-md-6 p-2 border border-info">
                <a class="material-symbols-outlined" style="cursor: pointer;" href="/players">
                    arrow_back_ios
                </a>
                <h4>Jugadores Disponibles</h3>
                <table class="table table-sm table-bordered table-striped">
                    <thead>
                        <tr class="text-center">
                            <td class="align-middle">Nombre</td>
                            <td class="align-middle">Apellido</td>
                            <td class="align-middle">Edad</td>
                            <td class="align-middle">E-mail</td>
                            <td class="align-middle">Balance Económico</td>
                        </tr>
                    </thead>
                    <tbody>
                    {% for player in players %}
                        <tr class="text-center">
                            <td class="align-middle">{{ player.name }}</td>
                            <td class="align-middle">{{ player.lastName }}</td>
                            <td class="align-middle">{{ player.age }} Años</td>
                            <td class="align-middle">{{ player.email }}</td>
                            <td class="align-middle">${{ player.balance }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <a type="button" class="btn btn-primary" href="/game/start">
                    Jugar ruleta
                </a>
            </div>
        </div>
        
    </div>
{% endblock %}
